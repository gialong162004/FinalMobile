<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Cấp quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Text"
        android:usesCleartextTraffic="true">  <!-- ✅ Để nguyên phần này -->

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Đăng ký RegisterActivity -->
        <activity android:name=".RegisterActivity" android:exported="true"/>
        <activity android:name=".ResetEmailActivity" android:exported="true"/>
        <activity android:name=".EnterOtpActivity" android:exported="true"/>
        <activity android:name=".NewPasswordActivity" android:exported="true"/>
        <!-- Màn hình hồ sơ -->
        <activity android:name=".ProfileActivity" android:exported="true"/>
        <activity android:name=".HomeActivity" android:exported="true"/>
<!--        <activity android:name=".ProfileActivity" android:exported="true"/>-->
    </application>
</manifest>
